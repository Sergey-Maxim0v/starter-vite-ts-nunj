{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "eslint-config-prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "no-console": "warn",
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": "warn",
    "func-names": "off",
    "class-methods-use-this": "off",
    "global-require": "off",
    "no-underscore-dangle": "off",
    "import/no-named-as-default": "off",
    "dot-notation": "off",
    "prefer-spread": "off",
    "no-unused-expressions": "error",
    "no-lonely-if": "warn",
    "eqeqeq": "error",
    "spaced-comment": "off",
    "object-shorthand": "off",
    "import/no-unresolved": "warn",
    "prefer-template": "off",
    "no-plusplus": "off",
    "no-restricted-syntax": "off",
    "import/first": "warn",
    "new-cap": "warn"
  }
}
